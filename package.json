{
    "name": "node-express",
    "version": "1.0.0",
    "description": "A scalable Express.js MVC application with ESM modules",
    "type": "module",
    "main": "server.js",
    "scripts": {
        "start": "node server.js",
        "dev": "nodemon server.js",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "format:write": "prettier --write 'src/**/*.{'js,json}'",
        "format:check": "prettier --check 'src/**/*.{'js,json}'",
        "setup": "node scripts/setup.js",
        "seed": "node scripts/seed.js",
        "build": "echo 'No build step required for ESM'",
        "logs": "tail -f logs/combined.log"
    },
    "keywords": [
        "express",
        "mvc",
        "node",
        "esm",
        "mongodb",
        "rest-api"
    ],
    "author": "Sayan Dey",
    "license": "MIT",
    "dependencies": {
        "bcrypt": "^6.0.0",
        "compression": "^1.8.0",
        "cors": "^2.8.5",
        "dotenv": "^17.0.1",
        "express": "^5.1.0",
        "express-handlebars": "^8.0.3",
        "express-validator": "^7.2.1",
        "helmet": "^8.1.0",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^8.16.1",
        "morgan": "^1.10.0",
        "nodemailer": "^7.0.4",
        "winston": "^3.17.0"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.28.0",
        "jest": "^30.0.3",
        "nodemon": "^3.1.10",
        "prettier": "3.6.2",
        "supertest": "^7.1.1"
    }
}
